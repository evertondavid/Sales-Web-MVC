@model SalesWebMvc.Models.Seller

@{
    ViewData["Title"] = "Delete";
}

<h2>@ViewData["Title"]</h2>
<h3>Are you sure you want to delete this?</h3>
<style>
    .value-dd {
        color: white;
    }

    .custom-button {
        background-color: rgb(42, 82, 190);
        padding: 10px 20px;
        /* Ajuste o padding para alcançar a altura desejada */
        font-size: 16px;
        /* Garanta que o tamanho da fonte seja adequado */
        border: none;
        border-radius: 5px;
        color: white;
        text-decoration: none;
        display: inline-block;
        /* Isso ajuda a alinhar corretamente o link */
        transition: background-color 0.3s ease;
    }

    .custom-danger-button {
        background-color: rgb(220, 53, 69);
        /* Vermelho */
        padding: 10px 20px;
        /* Ajuste o padding para alcançar a altura desejada */
        font-size: 16px;
        /* Garanta que o tamanho da fonte seja adequado */
        border: none;
        border-radius: 5px;
        color: white;
        text-decoration: none;
        display: inline-block;
        /* Isso ajuda a alinhar corretamente o link */
        transition: background-color 0.3s ease;
    }

    .custom-danger-button:hover {
        background-color: rgb(200, 35, 51);
        /* Vermelho escuro para hover */
    }

    .custom-danger-button:active {
        background-color: rgb(180, 25, 41);
        /* Vermelho mais escuro para ativo */
    }

    .custom-button:hover {
        background-color: rgb(22, 62, 170);
        /* Mais escuro para hover do botão azul */
    }

    .custom-button:active {
        background-color: rgb(12, 52, 160);
        /* Ainda mais escuro para o estado ativo */
    }
</style>
<div>
    <h4>Seller</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="value-dd">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="value-dd">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd class="value-dd">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.BaseSalary)
        </dt>
        <dd class="value-dd">
            @Html.DisplayFor(model => model.BaseSalary)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class="value-dd">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="custom-danger-button" />
        <a asp-action="Index" class="custom-button">Back to List</a>
    </form>
</div>
